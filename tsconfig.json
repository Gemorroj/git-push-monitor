{
    "compilerOptions": {
        "target": "es2018",
        "lib": ["es2018", "dom"],
        "rootDir": "src",
        "outDir": "dist",
        "module": "commonjs",
        "moduleResolution": "node",
        "strict": true,
        "sourceMap": true,
        "inlineSources": true,
        "types": ["node", "electron"],
        "stripInternal": true,
        "noImplicitAny": true
    },
    "include": [
        "src/**/*"
    ]
}
